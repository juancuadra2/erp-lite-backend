package com.jcuadrado.erplitebackend.infrastructure.in.api.documenttype.rest;

import com.fasterxml.jackson.databind.ObjectMapper;
import com.jcuadrado.erplitebackend.application.port.in.documenttype.*;
import com.jcuadrado.erplitebackend.domain.documenttype.exception.DocumentTypeNotFoundException;
import com.jcuadrado.erplitebackend.domain.documenttype.exception.DuplicateCodeException;
import com.jcuadrado.erplitebackend.domain.documenttype.model.DocumentType;
import com.jcuadrado.erplitebackend.infrastructure.in.api.documenttype.dto.CreateDocumentTypeRequestDto;
import com.jcuadrado.erplitebackend.infrastructure.in.api.documenttype.dto.UpdateDocumentTypeRequestDto;
import com.jcuadrado.erplitebackend.infrastructure.in.api.documenttype.mapper.DocumentTypeDtoMapper;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.DisplayName;
import org.junit.jupiter.api.Test;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.autoconfigure.web.servlet.AutoConfigureMockMvc;
import org.springframework.boot.test.context.SpringBootTest;
import org.springframework.boot.test.mock.mockito.MockBean;
import org.springframework.data.domain.*;
import org.springframework.http.MediaType;
import org.springframework.security.test.context.support.WithMockUser;
import org.springframework.test.web.servlet.MockMvc;

import java.util.*;

import static org.hamcrest.Matchers.*;
import static org.mockito.ArgumentMatchers.any;
import static org.mockito.ArgumentMatchers.*;
import static org.mockito.Mockito.*;
import static org.springframework.security.test.web.servlet.request.SecurityMockMvcRequestPostProcessors.csrf;
import static org.springframework.test.web.servlet.request.MockMvcRequestBuilders.*;
import static org.springframework.test.web.servlet.result.MockMvcResultMatchers.*;

/**
 * Integration tests for DocumentTypeController.
 */
@SpringBootTest
@AutoConfigureMockMvc
@DisplayName("DocumentTypeController Integration Tests")
class DocumentTypeControllerTest {

    @Autowired
    private MockMvc mockMvc;

    @Autowired
    private ObjectMapper objectMapper;

    @MockBean
    private CreateDocumentTypeUseCase createUseCase;

    @MockBean
    private GetDocumentTypeUseCase getUseCase;

    @MockBean
    private UpdateDocumentTypeUseCase updateUseCase;

    @MockBean
    private ListDocumentTypesUseCase listUseCase;

    @MockBean
    private DeactivateDocumentTypeUseCase deactivateUseCase;

    @MockBean
    private DocumentTypeDtoMapper mapper;

    private DocumentType testDocumentType;
    private UUID testUuid;

    @BeforeEach
    void setUp() {
        testUuid = UUID.randomUUID();
        testDocumentType = DocumentType.builder()
                .id(1L)
                .uuid(testUuid)
                .code("NIT")
                .name("Número de Identificación Tributaria")
                .description("Documento para empresas")
                .active(true)
                .build();
    }

    @Test
    @WithMockUser
    @DisplayName("Should create document type successfully")
    void shouldCreateDocumentTypeSuccessfully() throws Exception {
        // Given
        CreateDocumentTypeRequestDto request = CreateDocumentTypeRequestDto.builder()
                .code("NIT")
                .name("Número de Identificación Tributaria")
                .description("Documento para empresas")
                .build();

        when(mapper.toDomain(any(CreateDocumentTypeRequestDto.class))).thenReturn(testDocumentType);
        when(createUseCase.create(any(DocumentType.class))).thenReturn(testDocumentType);
        when(mapper.toResponseDto(any(DocumentType.class))).thenCallRealMethod();

        // When & Then
        mockMvc.perform(post("/api/document-types")
                        .with(csrf())
                        .contentType(MediaType.APPLICATION_JSON)
                        .content(objectMapper.writeValueAsString(request)))
                .andExpect(status().isCreated())
                .andExpect(jsonPath("$.code").value("NIT"))
                .andExpect(jsonPath("$.name").value("Número de Identificación Tributaria"));

        verify(createUseCase).create(any(DocumentType.class));
    }

    @Test
    @WithMockUser
    @DisplayName("Should return 409 when code already exists")
    void shouldReturn409WhenCodeAlreadyExists() throws Exception {
        // Given
        CreateDocumentTypeRequestDto request = CreateDocumentTypeRequestDto.builder()
                .code("NIT")
                .name("Número de Identificación Tributaria")
                .build();

        when(mapper.toDomain(any(CreateDocumentTypeRequestDto.class))).thenReturn(testDocumentType);
        when(createUseCase.create(any(DocumentType.class)))
                .thenThrow(new DuplicateCodeException("NIT"));

        // When & Then
        mockMvc.perform(post("/api/document-types")
                        .with(csrf())
                        .contentType(MediaType.APPLICATION_JSON)
                        .content(objectMapper.writeValueAsString(request)))
                .andExpect(status().isConflict());
    }

    @Test
    @WithMockUser
    @DisplayName("Should get document type by UUID")
    void shouldGetDocumentTypeByUuid() throws Exception {
        // Given
        when(getUseCase.getByUuid(testUuid)).thenReturn(testDocumentType);
        when(mapper.toResponseDto(any(DocumentType.class))).thenCallRealMethod();

        // When & Then
        mockMvc.perform(get("/api/document-types/{uuid}", testUuid)
                        .contentType(MediaType.APPLICATION_JSON))
                .andExpect(status().isOk())
                .andExpect(jsonPath("$.uuid").value(testUuid.toString()))
                .andExpect(jsonPath("$.code").value("NIT"));

        verify(getUseCase).getByUuid(testUuid);
    }

    @Test
    @WithMockUser
    @DisplayName("Should return 404 when document type not found")
    void shouldReturn404WhenDocumentTypeNotFound() throws Exception {
        // Given
        UUID nonExistentUuid = UUID.randomUUID();
        when(getUseCase.getByUuid(nonExistentUuid))
                .thenThrow(new DocumentTypeNotFoundException(nonExistentUuid));

        // When & Then
        mockMvc.perform(get("/api/document-types/{uuid}", nonExistentUuid)
                        .contentType(MediaType.APPLICATION_JSON))
                .andExpect(status().isNotFound());
    }

    @Test
    @WithMockUser
    @DisplayName("Should list document types with pagination")
    void shouldListDocumentTypesWithPagination() throws Exception {
        // Given
        List<DocumentType> documentTypes = Arrays.asList(testDocumentType);
        Page<DocumentType> page = new PageImpl<>(documentTypes, PageRequest.of(0, 10), 1);

        when(listUseCase.listWithFilters(any(), any(), any(), any(Pageable.class)))
                .thenReturn(page);
        when(mapper.toResponseDto(any(DocumentType.class))).thenCallRealMethod();

        // When & Then
        mockMvc.perform(get("/api/document-types")
                        .param("page", "0")
                        .param("limit", "10")
                        .contentType(MediaType.APPLICATION_JSON))
                .andExpect(status().isOk())
                .andExpect(jsonPath("$.content", hasSize(1)))
                .andExpect(jsonPath("$.totalElements").value(1))
                .andExpect(jsonPath("$.currentPage").value(0));

        verify(listUseCase).listWithFilters(any(), any(), any(), any(Pageable.class));
    }

    @Test
    @WithMockUser
    @DisplayName("Should filter document types by enabled status")
    void shouldFilterDocumentTypesByEnabledStatus() throws Exception {
        // Given
        List<DocumentType> activeTypes = Arrays.asList(testDocumentType);
        Page<DocumentType> page = new PageImpl<>(activeTypes, PageRequest.of(0, 10), 1);

        when(listUseCase.listWithFilters(eq(true), any(), any(), any(Pageable.class)))
                .thenReturn(page);
        when(mapper.toResponseDto(any(DocumentType.class))).thenCallRealMethod();

        // When & Then
        mockMvc.perform(get("/api/document-types")
                        .param("enabled", "true")
                        .contentType(MediaType.APPLICATION_JSON))
                .andExpect(status().isOk())
                .andExpect(jsonPath("$.content", hasSize(1)));

        verify(listUseCase).listWithFilters(eq(true), any(), any(), any(Pageable.class));
    }

    @Test
    @WithMockUser
    @DisplayName("Should search document types by text")
    void shouldSearchDocumentTypesByText() throws Exception {
        // Given
        String searchText = "Cedula";
        List<DocumentType> searchResults = Arrays.asList(testDocumentType);
        Page<DocumentType> page = new PageImpl<>(searchResults, PageRequest.of(0, 10), 1);

        when(listUseCase.listWithFilters(any(), eq(searchText), any(), any(Pageable.class)))
                .thenReturn(page);
        when(mapper.toResponseDto(any(DocumentType.class))).thenCallRealMethod();

        // When & Then
        mockMvc.perform(get("/api/document-types")
                        .param("search", searchText)
                        .contentType(MediaType.APPLICATION_JSON))
                .andExpect(status().isOk());

        verify(listUseCase).listWithFilters(any(), eq(searchText), any(), any(Pageable.class));
    }

    @Test
    @WithMockUser
    @DisplayName("Should update document type successfully")
    void shouldUpdateDocumentTypeSuccessfully() throws Exception {
        // Given
        UpdateDocumentTypeRequestDto request = UpdateDocumentTypeRequestDto.builder()
                .name("Updated Name")
                .description("Updated Description")
                .build();

        DocumentType updatedDocumentType = DocumentType.builder()
                .id(1L)
                .uuid(testUuid)
                .code("NIT")
                .name("Updated Name")
                .description("Updated Description")
                .active(true)
                .build();

        when(mapper.toDomain(any(UpdateDocumentTypeRequestDto.class))).thenReturn(testDocumentType);
        when(updateUseCase.update(eq(testUuid), any(DocumentType.class))).thenReturn(updatedDocumentType);
        when(mapper.toResponseDto(any(DocumentType.class))).thenCallRealMethod();

        // When & Then
        mockMvc.perform(put("/api/document-types/{uuid}", testUuid)
                        .with(csrf())
                        .contentType(MediaType.APPLICATION_JSON)
                        .content(objectMapper.writeValueAsString(request)))
                .andExpect(status().isOk())
                .andExpect(jsonPath("$.name").value("Updated Name"));

        verify(updateUseCase).update(eq(testUuid), any(DocumentType.class));
    }

    @Test
    @WithMockUser
    @DisplayName("Should delete document type successfully")
    void shouldDeleteDocumentTypeSuccessfully() throws Exception {
        // Given
        doNothing().when(deactivateUseCase).deactivate(testUuid);

        // When & Then
        mockMvc.perform(delete("/api/document-types/{uuid}", testUuid)
                        .with(csrf())
                        .contentType(MediaType.APPLICATION_JSON))
                .andExpect(status().isNoContent());

        verify(deactivateUseCase).deactivate(testUuid);
    }

    @Test
    @WithMockUser
    @DisplayName("Should deactivate document type successfully")
    void shouldDeactivateDocumentTypeSuccessfully() throws Exception {
        // Given
        doNothing().when(deactivateUseCase).deactivate(testUuid);

        // When & Then
        mockMvc.perform(patch("/api/document-types/{uuid}/deactivate", testUuid)
                        .with(csrf())
                        .contentType(MediaType.APPLICATION_JSON))
                .andExpect(status().isOk());

        verify(deactivateUseCase).deactivate(testUuid);
    }

    @Test
    @WithMockUser
    @DisplayName("Should activate document type successfully")
    void shouldActivateDocumentTypeSuccessfully() throws Exception {
        // Given
        doNothing().when(deactivateUseCase).activate(testUuid);

        // When & Then
        mockMvc.perform(patch("/api/document-types/{uuid}/activate", testUuid)
                        .with(csrf())
                        .contentType(MediaType.APPLICATION_JSON))
                .andExpect(status().isOk());

        verify(deactivateUseCase).activate(testUuid);
    }

    @Test
    @WithMockUser
    @DisplayName("Should validate limit does not exceed maximum")
    void shouldValidateLimitDoesNotExceedMaximum() throws Exception {
        // Given
        Page<DocumentType> page = new PageImpl<>(Collections.emptyList(), PageRequest.of(0, 100), 0);
        when(listUseCase.listWithFilters(any(), any(), any(), any(Pageable.class)))
                .thenReturn(page);

        // When & Then - Requesting limit of 150 should be capped to 100
        mockMvc.perform(get("/api/document-types")
                        .param("limit", "150")
                        .contentType(MediaType.APPLICATION_JSON))
                .andExpect(status().isOk())
                .andExpect(jsonPath("$.pageSize").value(100));
    }
}

